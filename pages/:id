        text-align: center;
    }
</style>
<div class="page_body">
    <h1 class="page_title" id="page_title"></h1>
    <hr>
    <div id="contact_us_container" class="hidden_now">
        <script id="contact_us_template" type="x-tmpl-mustache/text">
            
            <br/>
            <a class="visible-xs-inline-block" href="http://maps.google.ca?q={{name}}" target="_blank">
                <img src="http://maps.googleapis.com/maps/api/staticmap?center={{latitude}},{{longitude}}&amp;zoom=16&amp;size=600x500&amp;maptype=roadmap&amp;sensor=false&amp;markers=color:red%7Ccolor:red%7Clabel:%7C{{latitude}},{{longitude}}">    
            </a>
        </script>
        
        <div sylte="clear:both;">&nbsp;</div>    
    </div>
    <div id="page_body"></div>
</div>
<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var pages_json = "//www.aberdeenmall.ca/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                $('#page_title').html(data.title);
                $('#page_body').html(data.body);
                if(slug === "aberdeen-contact-us") {
                    $("#contact_us_container").show();
                }
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#error_msg").fadeIn("fast");
                }
            }); 
            var map_info = getPropertyDetails();
            renderGeneral("#contact_us_container", "#contact_us_template", map_info);
            console.log(map_info);
        }
        loadMallDataCached(renderAll); 
    })
</script>